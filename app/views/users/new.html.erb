<%= render 'cover' %>
<%= render 'introduction' %>

<section class="section">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <%= simple_form_for @user do |f| %>
          <%= f.input :name, required: true %>
          <%= f.input :email, placeholder: 'user@domain.com', required: true %>
          <%= f.button :submit %>
        <% end %>
      </div>
    </div>
  </div>
</section>